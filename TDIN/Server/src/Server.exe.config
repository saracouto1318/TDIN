<configuration>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown mode="Singleton" type="UserManager, Server" objectUri="User.rem"/>
        <wellknown mode="Singleton" type="TransactionManager, Server" objectUri="Transaction.rem"/>
      </service>
      <channels>
        <channel ref="tcp" port="9000">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>